    }

    .voip__call-menu .voip__do-not-disturb-wrapper .tgl::-moz-selection,
    .voip__call-menu .voip__do-not-disturb-wrapper .tgl:after::-moz-selection,
    .voip__call-menu .voip__do-not-disturb-wrapper .tgl:before::-moz-selection,
