        height: 100%;
    }

    .voip__call-menu .voip__do-not-disturb-wrapper .tgl + .tgl-btn:after {
        left: 0;
    }

    .voip__call-menu .voip__do-not-disturb-wrapper .tgl + .tgl-btn:before {
        display: none;
    }

    .voip__call-menu .voip__do-not-disturb-wrapper .tgl:checked + .tgl-btn:after {
        left: 50%;
    }
    
    .voip__call-menu .voip__do-not-disturb-wrapper .tgl-light + .tgl-btn {
        background: #f0f0f0;
        border-radius: 2em;
        padding: 2px;
        transition: all 0.4s ease;
    }

    .voip__call-menu .voip__do-not-disturb-wrapper .tgl-light + .tgl-btn:after {
        border-radius: 50%;
        background: #fff;
        transition: all 0.2s ease;
    }

    .voip__call-menu .voip__do-not-disturb-wrapper .tgl-light:checked + .tgl-btn {
        background: #ddd;
    }
