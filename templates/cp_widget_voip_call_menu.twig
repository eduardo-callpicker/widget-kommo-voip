        padding-right: 1rem;
    }

    .voip__call-menu .voip__call-btn {
        height: 65px;
        width: 65px;
        cursor: pointer;
    }

    .voip__call-menu .voip__call-mute-btn,
    .voip__call-menu .voip__call-settings-btn {
        background: #1d3b52;
        fill: #839aa6;
    }

    .voip__call-menu .voip__call-mute-btn:hover,
    .voip__call-menu .voip__call-settings-btn:hover {
        background: var(--palette-left-menu-background-primary);;
