    .voip__call-menu .voip__do-not-disturb-wrapper .tgl + .tgl-btn::-moz-selection,
    .voip__call-menu .voip__do-not-disturb-wrapper .tgl::selection,
    .voip__call-menu .voip__do-not-disturb-wrapper .tgl:after::selection,
    .voip__call-menu .voip__do-not-disturb-wrapper .tgl:before::selection,
    .voip__call-menu .voip__do-not-disturb-wrapper .tgl *::selection,
    .voip__call-menu .voip__do-not-disturb-wrapper .tgl *:after::selection,
    .voip__call-menu .voip__do-not-disturb-wrapper .tgl *:before::selection,
    .voip__call-menu .voip__do-not-disturb-wrapper .tgl + .tgl-btn::selection {
